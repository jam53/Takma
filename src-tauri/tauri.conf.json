{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "beforeBundleCommand": ".\\Dependencies\\upx.exe --ultra-brute .\\src-tauri\\target\\release\\Takma.exe",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Takma",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": ".*"
            },
            "fs": {
                "all": true,
                "scope": [
                    "**"
                ]
            },
            "dialog": {
                "all": true
            },
            "path": {
                "all": true
            },
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true
            },
            "notification": {
                "all": true
            },
            "clipboard": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.jam54.Takma",
            "targets": "all",
            "resources": [
                "resources/*"
            ]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Takma 1.0.0 (327)",
                "width": 1600,
                "height": 800,
                "decorations": false,
                "transparent": true,
                "fileDropEnabled": false
            }
        ]
    }
}
